        }

        input[type="submit"]:hover {
          background-color: #42287A;
        }

        form {
          -webkit-transition: 0.4s;
          transition: 0.4s;
        }

        .wrapper {
          top: 50%;
          left: 50%;
          position: absolute;
          width: 90%;
          min-width: 28rem;
          max-width: 50rem;
          background: white;
          text-align: center;
          font-size: 1.7rem;
          font-family: 'Sunny Body';
          height: 80%;
          display: -webkit-box;
          display: -ms-flexbox;
          display: flex;
          -webkit-box-orient: vertical;
          -webkit-box-direction: normal;
          -ms-flex-direction: column;
          flex-direction: column;
          border-radius: 10px;
          overflow: hidden;
          -webkit-box-shadow: 0.2rem 0.2rem 0.4rem rgba(0, 0, 0, 0.3);
          box-shadow: 0.2rem 0.2rem 0.4rem rgba(0, 0, 0, 0.3);
          z-index: 3;
          -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
          -webkit-transition: 0.5s;
          transition: 0.5s;
        }

        .wrapper:not(.open) {
          -webkit-transform: translate(-50%, -200%);
          transform: translate(-50%, -200%);
        }

        .modal-head {
          background: #8B69D1;
          padding: 2rem;
          color: #42287A;
        }

        .modal-head img {
          -webkit-filter: invert(1);
          filter: invert(1);
        }

        .modal-content {
          -webkit-box-flex: 1;
          -ms-flex: 1 0;
          flex: 1 0;
          padding: 2rem;
          overflow-y: scroll;
          position: relative;
        }

        .modal-content h2 {
          font-family: 'Sunny Title';
        }

        .links-logos {
          margin: 2rem 0;
        }

        .links-logos a {
          opacity: 0.6;
          -webkit-transition: 0.4s;
          transition: 0.4s;
        }

        .links-logos a:hover {
          opacity: 1;
        }

        .modal-footer {
          background: #42287A;
          padding: 2rem;
          color: #8B69D1;
          cursor: pointer;
          -webkit-transition: 0.4s;
          transition: 0.4s;
        }

        .modal-footer:hover {
          background-color: #CA3C25;
          color: white;
        }

        .loader {
          position: absolute;
          content: '';
          top: calc(50% - 5rem);
          left: calc(50% - 5rem);
          width: 10rem;
          height: 10rem;
          border: 5px solid lightBlue;
          border-radius: 50%;
          overflow: hidden;
          -webkit-transition: 0.3s;
          transition: 0.3s;
          -webkit-box-shadow: 0rem 0rem 0.6rem rgba(0, 0, 0, 0.3);
          box-shadow: 0rem 0rem 0.6rem rgba(0, 0, 0, 0.3);
          -webkit-animation: spin 1s linear infinite;
          animation: spin 1s linear infinite;
          z-index: 4;
        }

        .blackout {
          position: absolute;
          height: 100%;
          width: 100%;
          content: '';
          background-color: rgba(0, 0, 0, 0.9);
          top: 0;
          left: 0;
          z-index: 3;
        }

        .success {
          background: lightGreen;
          border-color: lightGreen;
        }

        .fail {
          background: #ffcccb;
          border-color: #ffcccb;
        }

        .loader.success::before {
          height: 0.7rem;
          width: 4.5rem;
          position: absolute;
          top: 65%;
          left: 44%;
          background-color: green;
          -webkit-transform: rotate(-45deg);
          transform: rotate(-45deg);
          -webkit-transform-origin: 0% 50%;
          transform-origin: 0% 50%;
          border-radius: 5px;
          -webkit-animation: baseGrow 0.5s;
          animation: baseGrow 0.5s;
          content: '';
        }

        .loader.success::after {
          height: 0.7rem;
          width: 2.5rem;
          position: absolute;
          top: 65%;
          left: 49%;
          background-color: green;
          -webkit-transform: rotate(-135deg);
          transform: rotate(-135deg);
          -webkit-transform-origin: 0% 50%;
          transform-origin: 0% 50%;
          border-radius: 5px;
          -webkit-animation: tipGrow 0.5s;
          animation: tipGrow 0.5s;
          content: '';
        }

        .loader.fail::before {
          width: 6rem;
          height: 0.5rem;
          background: darkRed;
          -webkit-transform-origin: 50% 50%;
          transform-origin: 50% 50%;
          top: calc(50% - 0.25rem);
          left: calc(50% - 3rem);
          -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
          position: absolute;
          content: '';
          border-radius: 10px;
          -webkit-animation: leftIn 0.3s linear;
          animation: leftIn 0.3s linear;
          content: '';
        }

        .loader.fail::after {
          width: 6rem;
          height: 0.5rem;
          background: darkRed;
          -webkit-transform-origin: 50% 50%;
          transform-origin: 50% 50%;
          top: calc(50% - 0.25rem);
          right: calc(50% - 3rem);
          -webkit-transform: rotate(-45deg);
          transform: rotate(-45deg);
          position: absolute;
          content: '';
          border-radius: 10px;
          -webkit-animation: rightIn 0.3s linear;
          animation: rightIn 0.3s linear;
          content: '';
        }

        .loader.success,
        .loader.fail {
          -webkit-animation: pop 1.2s ease-in-out;
          animation: pop 1.2s ease-in-out;
        }

        @-webkit-keyframes spin {
          0% {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
            border-top: 5px solid blue;
          }

          100% {
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
            border-top: 5px solid blue;
          }
        }

        @keyframes spin {
          0% {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
            border-top: 5px solid blue;
          }

          100% {
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
            border-top: 5px solid blue;
          }
        }

        @-webkit-keyframes tipGrow {
          0% {
            width: 0px;
            left: 0;
            top: 0;
          }

          25% {
            width: 0px;
            left: 0;
            top: 0;
          }

          50% {
            top: 0%;
            left: 0%;
            width: 0;
          }

          100% {
            top: 65%;
            left: 50%;
            width: 1.5rem;
          }
        }

        @keyframes tipGrow {
          0% {
            width: 0px;
            left: 0;
            top: 0;
          }

          25% {
            width: 0px;
            left: 0;
            top: 0;
          }

          50% {
            top: 0%;
            left: 0%;
            width: 0;
          }

          100% {
            top: 65%;
            left: 50%;
            width: 1.5rem;
          }
        }

        @-webkit-keyframes baseGrow {
          0% {
            width: 0;
          }

          80% {
            width: 0;
          }

          100% {
            width: 2.5rem;
          }
        }

        @keyframes baseGrow {
          0% {
            width: 0;
          }

          80% {
            width: 0;
          }

          100% {
            width: 2.5rem;
          }
        }

        @-webkit-keyframes pop {
          0% {
            -webkit-transform: scale(1);
            transform: scale(1);
          }

          80% {
            -webkit-transform: scale(1);
            transform: scale(1);
          }

          100% {
            -webkit-transform: scale(1.1);
            transform: scale(1.1);
          }
        }

        @keyframes pop {
          0% {
            -webkit-transform: scale(1);
            transform: scale(1);
          }

          80% {
            -webkit-transform: scale(1);
            transform: scale(1);
          }

          100% {
            -webkit-transform: scale(1.1);
            transform: scale(1.1);
          }
        }

        @-webkit-keyframes leftIn {
          0% {
            left: 0;
            top: 0;
            width: 0;
          }

          100% {
            top: calc(50% - 0.25rem);
            left: calc(50% - 1.5rem);
            width: 3rem;
          }
        }

        @keyframes leftIn {
          0% {
            left: 0;
            top: 0;
            width: 0;
          }

          100% {
            top: calc(50% - 0.25rem);
            left: calc(50% - 1.5rem);
            width: 3rem;
          }
        }

        @-webkit-keyframes rightIn {
          0% {
            right: 0;
            top: 0;
            width: 0;
          }

          100% {
            top: calc(50% - 0.25rem);
            right: calc(50% - 1.5rem);
            width: 3rem;
          }
        }

        @keyframes rightIn {
          0% {
            right: 0;
