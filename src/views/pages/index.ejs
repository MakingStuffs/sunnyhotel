    <template id="contact-template">
      <style>
        contact-input {
          position: relative;
          display: inline-block;
        }

        contact-input[fieldType="textarea"] {
          display: block;
        }

        fieldset {
          border: none;
          padding: 0;
          margin: 0;
        }

        input[type="submit"] {
          -webkit-transition: 0.4s;
          transition: 0.4s;
          background-color: #1B9540;
          cursor: pointer;
          color: rgba(255, 255, 255, 0.9);
          width: 50%;
          padding: 1rem;
          font-size: 1.5rem;
          border-radius: 1rem 0 1rem 0;
